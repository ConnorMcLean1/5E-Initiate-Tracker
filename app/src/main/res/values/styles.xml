<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="custom_fab">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="deathSaveFailureBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/death_save_failure_selector</item>
    </style>

    <style name="deathSaveSuccessBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/death_save_success_selector</item>
    </style>

</resources>
